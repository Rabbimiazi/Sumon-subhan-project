                contentType: "application/Json"
            }).done(function (data) {




                clearall();
            }).fail(function (err) {
                console.log(err.responseText);
            });
        });//save

        function LoadData() {
            $.ajax({
                url: "/Home/Show",
                type: "GET",
                dataType: "Json"
            }).done(function (data) {
                console.log(data[0].Name);
                $("#tbl tbody").empty();
                for (var i = 0; i < data.length; i++) {
                    $("#tbl tbody").append(
                        "<tr><td>" + data[i].Id + "</td>" +
                        "<td>" + data[i].Name + "</td>" +
                        "<td>" + data[i].Address + "</td>" +
                        "<td><button class='btn btn-primary' onclick='edit(" + data[i].Id + ")' >Edit</button>" +
                        "<button class='btn btn-danger' onclick='deletestd(" + data[i].Id + ")' >Delete</button></td>" +
                        "</tr>"
                    );
                }
            }).fail(function (err) {
                console.log(err);
            });
        }
        function deletestd(id) {

            $.ajax({
                url: "/Home/delete/" + id,
                type: "GET",
                dataType: "Json"
            }).done(function (data) {

                console.log(data.success);
                LoadData();

            }).fail(function (err) {

                console.log(err);
            });


        } //Delete
        function clearall() {
            $("#name").val('');
            $("#email").val('');
            $("#phone").val('');
            $("#date").val('');
            $("#time").val('');
            $("#person").val('');

        }
        function edit(id) {

            $.ajax({
                url: "/Home/Getbyid/" + id,
                type: "GET",
                dataType: "Json"
            }).done(function (data) {

                console.log(data.Name);
                $("#name").val(data.Name);
                $("#adress").val(data.Address);
            }).fail(function (err) {

                console.log(err);
            });
        }; //Edit

        $("#btnupdate").click(function () {
            var obj = {
                Name: $("#name").val(),
                Address: $("#adress").val(),
                Id: $("#id").val()
            }
            $.ajax({
                url: "/Home/Update",
                type: "POST",
                dataType: "Json",
                data: JSON.stringify(obj),
                contentType: "application/json"
            }).done(function (data) {

                console.log(data.Name);

                LoadData();
                clearall();

            }).fail(function (err) {

                console.log(err.responseText);
            });
        });

    </script>
